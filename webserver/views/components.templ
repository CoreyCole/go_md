templ WelcomePage(content templ.Component) {
  <!DOCTYPE html>
  <html class="m-0 h-full bg-black">
  <head>
    <title>Corey Cole's Web Server</title>
    <link rel="stylesheet" type="text/css" href="/build.css" />
    <style type="text/css">
      html, body {
        margin: 0;
        height: 100%;
      }
      p {
        font-size: 1.2rem;
      }
      div.code {
        margin-top: 1rem;
        margin-bottom: 1rem;
      }
      div.code > pre {
        padding: 1rem;
      }
    </style>
  </head>
  <body class="dark m-0 h-full">
    <div class="p-4 m-0 h-full bg-black text-slate-300">
      @content
    </div>
  </body>
  </html>
}

